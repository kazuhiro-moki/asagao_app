<table class="attr">
  <tr>
    <th width="150">背番号</th>
    <td><%= @member.number %></td>
  </tr>
  <tr>
    <th width="150">ユーザー名</th>
    <td><%= @member.name %></td>
  </tr>
  <tr>
    <th width="150">氏名</th>
    <td><%= @member.full_name %></td>
  </tr>
  <tr>
    <th width="150">性別</th>
    <td><%= @member.sex %></td>
  </tr>
  <tr>
    <th width="150">誕生日</th>
    <td><%= @member.birthday&.strftime("%Y年%m月%d日") %></td>
  </tr>
  <tr>
    <th width="150">メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>
  <tr>
    <th width="150">管理者</th>
    <td><%= @member.administrator? ? "○" : "ー" %></td>
  </tr>
</table>